{
  "compilerOptions": {
    "target": "es2020",
    "module": "amd",
    "outDir": "./dist",
    "rootDir": "./",
    "lib": [
      "dom",
      "es2020"
    ],
    "esModuleInterop": true,
    "outFile": "./dist/main.js",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts"
  ]
}